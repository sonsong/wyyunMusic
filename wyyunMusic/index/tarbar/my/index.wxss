.wrap{
    background: #eef0ef;
    font-size: 16px;
}
.wrap ._flex {
    display: flex;
    justify-content: space-between;
}
.wrap .functions, .top {
    background: #fafcfb;
}

.wrap .fun_icon {
    position: relative;
    top: 2px;
    left: -22px;
    color:#000;
    font-size: 20px;
}
.wrap .functions .total{
    width: 60%;
    text-align: right;
    color:rgb(172, 171, 171);
}
.wrap .functions > view {
    font-size: 16px;
    color: #000;
    height: 50px;
    line-height: 50px;
    width: 90%;
    margin-left: 10%;
    border-bottom: 2px solid #eef0ef;
}
.wrap .functions > view .iconfont:first-child{
    color:#c62f2f;
    font-weight: bold;
}
.wrap .functions > view:last-child{
    border: none;
}
.wrap .musics{
    margin-bottom:10px;
}
.wrap .musics .title{
    display: flex;
    height: 50px;
    line-height: 50px;
}
.wrap .musics .title > .iconfont{
    margin:0 20px;
}
.wrap .musics .list{
    display: flex;
    background: #fff;
}
.wrap .musics .true{
    transform: rotate(90deg)
}
.wrap .musics .list > view:first-child{
    font-size: 50px;
    margin: 10px 20px;
}
.wrap .musics .list > view:last-child{
    height: 70px;
    line-height: 25px;
}
.wrap .musics .list > view:last-child > view:first-child{
    margin-top: 10px
}
.wrap .recommend_music_list{
    background: #fff
}
.wrap .recommend_music_list .title{
    height: 80px;
    line-height: 80px;
    text-align: center;
    font-size: 20px;
}
.wrap .recommend_music_list .list > view{
    flex-flow: 1

}
.wrap .recommend_music_list .list > view image{
    width: 120px;
    height: 120px;

}
.wrap .recommend_music_list .list > view > view{
    margin-bottom: 10px

}